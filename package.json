{
  "name": "nextjs-template",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "typegen": "next typegen",
    "start": "node .next/standalone/server.js",
    "prestart": "cp -r -p public .next/standalone && cp -r -p .next/static .next/standalone/.next",
    "lint": "eslint --max-warnings 0 --fix",
    "test": "vitest run",
    "test:w": "vitest --watch",
    "coverage": "vitest run --coverage",
    "type:check": "tsc --noEmit",
    "format": "prettier --log-level warn --write \"./**/*.{js,jsx,mjs,ts,tsx,mts,d.ts,json,yaml,yml,html,css,scss,md}\"",
    "docker": "docker compose up --build -d",
    "docker-stage": "docker compose -f docker-compose.stage.yml up --build -d",
    "docker-dev": "docker compose -f docker-compose.dev.yml up --build",
    "docker:sh": "docker exec -it frontend-template sh",
    "docker-stage:sh": "docker exec -it frontend-template-stage sh",
    "docker-dev:sh": "docker exec -it frontend-template-dev sh",
    "lint-staged": "lint-staged",
    "prepare": "husky || true"
  },
  "packageManager": "pnpm@10.18.1",
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-slot": "^1.2.3",
    "@tanstack/react-query": "^5.90.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "fetcher-lite": "^0.0.10",
    "lucide-react": "^0.545.0",
    "next": "^15.5.4",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.64.0",
    "server-only": "^0.0.1",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@next/eslint-plugin-next": "^15.5.4",
    "@stack-lint/base": "^0.0.10",
    "@stack-lint/react": "^0.0.10",
    "@stack-lint/typescript": "^0.0.10",
    "@tailwindcss/postcss": "^4.1.14",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.7.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.1",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/eslint-plugin": "^1.3.16",
    "eslint": "^9.37.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.14",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22",
    "npm": ">=10",
    "pnpm": ">=10"
  },
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx,mts,d.ts}": [
      "eslint --max-warnings 0 --fix",
      "vitest related --run"
    ],
    "*.{js,jsx,mjs,ts,tsx,mts,d.ts,json,yaml,yml,html,css,scss,md}": "prettier --log-level warn --write"
  }
}
