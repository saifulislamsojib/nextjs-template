{
  "name": "nextjs-template",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "next dev --turbopack",
    "dev:d": "WATCHPACK_POLLING=true next dev",
    "build": "next build",
    "start": "node .next/standalone/server.js",
    "lint": "next lint --fix --max-warnings 0",
    "test": "vitest run",
    "test:w": "vitest --watch",
    "coverage": "vitest run --coverage",
    "type:check": "tsc",
    "format": "prettier --log-level warn --write \"./**/*.{ts,tsx,d.ts,mjs,json,css,scss,yml,md}\"",
    "docker": "docker compose up --build -d",
    "docker-stage": "docker compose -f docker-compose.stage.yml up --build -d",
    "docker-dev": "docker compose -f docker-compose.dev.yml up --build",
    "docker:sh": "docker exec -it frontend-template sh",
    "docker-stage:sh": "docker exec -it frontend-template-stage sh",
    "docker-dev:sh": "docker exec -it frontend-template-dev sh",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "packageManager": "pnpm@9.15.0",
  "dependencies": {
    "clsx": "^2.1.1",
    "next": "15.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.4.0",
    "server-only": "^0.0.1",
    "tailwind-merge": "^2.5.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.0",
    "@commitlint/config-conventional": "^19.6.0",
    "@eslint/js": "^9",
    "@next/eslint-plugin-next": "^15.0.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/eslint-plugin": "^1.1.14",
    "eslint": "^9",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest-dom": "^5.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "globals": "^15",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "postcss": "^8",
    "prettier": "^3",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "tailwindcss": "^3.4.16",
    "typescript": "^5",
    "typescript-eslint": "^8",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=22",
    "npm": ">=10",
    "pnpm": ">=9"
  }
}
