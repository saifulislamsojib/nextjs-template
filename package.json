{
  "name": "nextjs-template",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --fix --max-warnings 0",
    "test": "jest",
    "test:w": "jest --watch",
    "type:check": "tsc",
    "format": "prettier --log-level warn --write \"./**/*.{ts,tsx,d.ts,mjs,json,css,scss,yml,md}\"",
    "docker": "docker compose up --build -d",
    "docker-stage": "docker compose -f docker-compose-stage.yml up --build -d",
    "docker:sh": "docker exec -it frontend sh",
    "docker-stage:sh": "docker exec -it frontend_stage sh",
    "lint-staged": "lint-staged",
    "prepare": "husky"
  },
  "packageManager": "pnpm@9.12.2",
  "dependencies": {
    "clsx": "^2.1.1",
    "next": "15.0.1",
    "react": "19.0.0-rc-69d4b800-20241021",
    "react-dom": "19.0.0-rc-69d4b800-20241021",
    "react-icons": "^5.3.0",
    "server-only": "^0.0.1",
    "tailwind-merge": "^2.5.4"
  },
  "devDependencies": {
    "@eslint/js": "^9",
    "@next/eslint-plugin-next": "^15.0.1",
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/react": "^16.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^9",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "globals": "^15",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.10",
    "postcss": "^8",
    "prettier": "^3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^3.4.14",
    "typescript": "^5",
    "typescript-eslint": "^8"
  },
  "engines": {
    "node": ">=20",
    "npm": ">=10",
    "pnpm": ">=9"
  },
  "lint-staged": {
    "*.{ts,tsx,d.ts,mjs,json,css,scss,yml,md}": "prettier --log-level warn --write"
  }
}
